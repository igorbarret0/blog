<!DOCTYPE html>

<%- include ('../../partials/header') %>

<%- include ('../../partials/navbar') %>
<div class="container">
    <hr>
    <div class="card">
        <div class="card-header">
            <h2> Novo Artigo </h2>
        </div>
        <div class="card-body">
            <form method="post" action="/articles/save">
                <input class=" form-control mt-3" type="text" name="title" placeholder="Defina o tÃ­tulo do artigo">
                <textarea class="form-control mt-3" placeholder="Escreva o artigo aqui" name="body" id="article"></textarea>
                <label for="">Categoria</label>
                <select name="category" class="form-control">
                    <% categories.forEach((category) => { %>
                        <option value="<%= category.id %>">
                            <%= category.title %>
                        </option>
                    <% }) %> 
                </select>
                <br>
                <button class="form-control btn-primary mt-3" type="submit">Cadastrar</button>
            </form>
        </div>
    </div>
    
</div>

<%- include ('../../partials/footer') %>

<script src="/tinymce/tinymce.min.js"> </script>

<script>
    tinymce.init({
        selector: '#article',
        plugins: [
            'advlist autolink link image lists print preview hr searchreplace wordcount fullscreen insertdatetime media save table paste'
        ]
    })
</script>